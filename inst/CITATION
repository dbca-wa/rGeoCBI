  entry    = "Misc",
  title    = "rGeoCBI: A burn severity assessment toolkit",
  author   = "Valerie Densmore, Florian W. Mayer",
  note = "R package version 0.0.2",
  year     = 2020,
  url      = "https://github.com/dbca-wa/rGeoCBI",
  textVersion = paste(
    "Valerie Densmore, Florian W. Mayer (2020). rGeoCBI: A burn severity assessment toolkit.",
    "R package version 0.0.2. https://github.com/dbca-wa/rGeoCBI"
  )
)
